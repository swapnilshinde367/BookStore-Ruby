<h1>Books</h1>
<%= link_to 'Create New', new_book_path %>
<br><br>
<table>
  <tbody>
    <% if @books.present? %>
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Published Date</th>
          <th>Author</th>
          <th>Publisher</th>
          <th>Actions</th>
        </tr>
      </thead>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.id, book %></td>
          <td><%= link_to book.name, book %></td>
          <td><%= book.description %></td>
          <td><%= book.price %></td>
          <td><%= book.published_date %></td>
          <td><%= link_to book.author.name, book.author %></td>
          <td><%= link_to book.publisher.name, book.publisher %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %> | <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure you want to delete book?' } %></td>
        </tr>
      <% end %>
    <% else %>
      <span class="no_records" >
        Oops, no books have been added.
      </span>
    <% end %>
  </tbody>
</table>
